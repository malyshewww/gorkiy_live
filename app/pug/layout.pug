include variables.pug

doctype html
html(lang="ru")
	block variables
	head
		block head
			meta(charset="UTF-8")
			title #{pageTitle} | Горький LIVE
			meta(name='viewport', content='width=device-width, initial-scale=1')
			//- meta(name='viewport', content='width=1320px, initial-scale=1')
			link(href="styles/main.min.css?v="+ versionFiles, rel="stylesheet")
			//- include blocks/favicons
	body
		div.wrapper#wrapper
			include blocks/header
			main.content
				block content
			include blocks/footer
		include blocks/radio
		block scripts
			script(src="scripts/main.min.js?v=" + versionFiles defer)
